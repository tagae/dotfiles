TEXT
${time %A %d %B %Y %H:%M} (Bogota: ${tztime America/Bogota %H:%M})
$hr
${color grey}Uptime:$color $uptime ($loadavg)
${color grey}RAM:$color ${membar 4,95} ${color grey}Swap:$color ${swapbar 4,95}
${color grey}Buffered:$color $buffers - ${color grey}cached:$color $cached
${color grey}CPU:$color $cpu% ${cpubar 4}
$color${cpugraph cpu0 20}
${color grey}Processes:$color $processes  ${color grey}Running:$color $running_processes
${color grey}Net: $color${downspeed ppp0} ${color grey}k/s down - $color${upspeed ppp0} ${color grey}k/s up
$color${downspeedgraph ppp0 4}
${color grey}Disk:$color $diskio_read ${color grey}(read)$color $diskio_write ${color grey}(write)
$hr
${color grey}File systems:
 /      $color${fs_bar 6 /}
 usr    $color${fs_bar 6 /usr}
 var    $color${fs_bar 6 /var}
 home   $color${fs_bar 6 /home}
 store  $color${fs_bar 6 /mnt/store}
 backup $color${fs_bar 6 /mnt/backup}
$hr
${color grey}Name                  PID   CPU%   MEM%
${color lightgrey} ${top name 1} ${top pid 1} ${top cpu 1} ${top mem 1}
${color lightgrey} ${top name 2} ${top pid 2} ${top cpu 2} ${top mem 2}
${color lightgrey} ${top name 3} ${top pid 3} ${top cpu 3} ${top mem 3}
${color lightgrey} ${top name 4} ${top pid 4} ${top cpu 4} ${top mem 4}
$hr
${color grey}Name                  PID   CPU%   MEM%
${color lightgrey} ${top_mem name 1} ${top_mem pid 1} ${top_mem cpu 1} ${top_mem mem 1}
${color lightgrey} ${top_mem name 2} ${top_mem pid 2} ${top_mem cpu 2} ${top_mem mem 2}
${color lightgrey} ${top_mem name 3} ${top_mem pid 3} ${top_mem cpu 3} ${top_mem mem 3}
${color lightgrey} ${top_mem name 4} ${top_mem pid 4} ${top_mem cpu 4} ${top_mem mem 4}
