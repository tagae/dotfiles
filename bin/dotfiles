#!/usr/bin/env bash

source "$(dirname "$0")"/../lib/base.sh

require-module command message path import use eject

use-command ln gln ln

### Top-level shell

dotfiles() {
    if (( $# == 0 )); then
        cat >&2 <<EOM
Usage: $(basename "$0") <ACTION> [ARGS...]

The available actions are
- import: bring an exiting dotfile into version control, and use the managed dotfile
- use: symlink a managed dotfile to your home directory, so that it take effect
- eject: move a dotfile out of version control, and back to your home directory
EOM
        exit 1
    fi

    local -r action="$1"
    shift

    if [[ "$(type -t "$action"-dotfiles)" = 'function' ]]; then
        "$action"-dotfiles "$@"
    else
        error "unknown action '$action'"
    fi
}

### Sub shells

import-dotfiles() {
    if (( $# == 0 )); then
        cat >&2 <<EOM
Usage: $(basename "0") import ~/.FILE...
EOM
        exit 1
    fi
    while (( $# > 0 )); do
        import-dotfile "$1"
        shift
    done
}

use-dotfiles() {
    if (( $# == 0 )); then
        cat >&2 <<EOM
Usage: $(basename "$0") use ~/$(from-home "$DOTFILES")/FILE...
EOM
        exit 1
    fi
    while (( $# > 0 )); do
        use-dotfile "$1"
        shift
    done
}

eject-dotfiles() {
    if (( $# == 0 )); then
        cat >&2 <<EOM
Usage: $(basename "$0") eject ~/.FILE...
EOM
        exit 1
    fi
    while (( $# > 0 )); do
        eject-dotfile "$1"
        shift
    done
}

dotfiles "$@"
