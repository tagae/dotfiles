[user]
        name = Sebastián González
        email = tagae@ehub.io

[include]
        path = ~/.gitconfig.d/local
        path = ~/.gitconfig.d/secrets

[core]
        excludesfile = ~/.gitconfig.d/ignore

[commit]
        template = ~/.gitconfig.d/commit-template

[alias]
        # ---[ working tree ]---
        co = checkout
        # ---[ staging ]---
        ap = add --patch
        # ---[ commit ]---
        ci = commit -v
        fix = commit -v --amend --no-edit
        fup = commit --fixup
        # ---[ branching ]---
        br = branch -vv
        # ---[ diff ]---
        # show differences in individual characters, instead of whole lines
        dw = diff --color-words=.
        # ---[ logging ]---
        lg = log --oneline --abbrev-commit --graph --decorate --color
        la = log --oneline --abbrev-commit --graph --decorate --color --all
        lc = log --oneline --abbrev-commit --graph --decorate --color --left-right --cherry-pick
        ll = log --pretty=format:'%h %ad %s%d [%an]' --graph --date=short
        # show branch activity
        lb = for-each-ref --sort=-committerdate --format=\"%(color:cyan)%(authordate:relative)\t%(color:red)%(authorname)\t%(color:white)%(color:bold)%(refname:short)\" refs/remotes
        # ---[ status ]---
        st = status

[rebase]
        autosquash = true
[push]
	default = current
        default = current
[init]
        defaultBranch = main
